{
  "name": "@gabortorma/mwm",
  "type": "module",
  "version": "0.8.7",
  "packageManager": "pnpm@9.11.0+sha512.0a203ffaed5a3f63242cd064c8fb5892366c103e328079318f78062f24ea8c9d50bc6a47aa3567cabefd824d170e78fa2745ed1f16b132e16436146b7688f19b",
  "description": "Multi-repo Workspace Manager",
  "author": "gabortorma",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "github",
    "url": "git+ssh://git@github.com/gabortorma/mwm.git"
  },
  "keywords": [
    "citty",
    "consola",
    "syncpack-alternative",
    "workspace-tools",
    "release-it",
    "pnpm",
    "mono-repo",
    "multi-repo",
    "workspace"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    },
    "./generate": {
      "types": "./dist/commands/generate/generate.d.ts",
      "import": "./dist/commands/generate/generate.mjs",
      "require": "./dist/commands/generate/generate.cjs"
    },
    "./release": {
      "types": "./dist/commands/release/release.d.ts",
      "import": "./dist/commands/release/release.mjs",
      "require": "./dist/commands/release/release.cjs"
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "bin": {
    "mwm": "./bin/cli.js"
  },
  "files": [
    "bin",
    "dist"
  ],
  "scripts": {
    "build": "unbuild",
    "dev": "pnpm --filter @gabortorma/mwm-playground dev",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prerelease": "pnpm build && pnpm lint && pnpm typecheck",
    "release": "dotenv release-it",
    "typecheck": "tsc --noEmit",
    "test": "pnpm lint && pnpm typecheck && vitest run",
    "cli": "jiti ./scripts/cli.js",
    "merge-template": "./scripts/merge-template.sh"
  },
  "dependencies": {
    "@octokit/rest": "^21.0.2",
    "c12": "^1.11.2",
    "change-case": "^5.4.4",
    "citty": "^0.1.6",
    "compare-versions": "^6.1.1",
    "consola": "^3.2.3",
    "defu": "^6.1.4",
    "pkg-types": "^1.2.0",
    "pnpm": "^9.11.0",
    "release-it": "^17.6.0",
    "replace-in-file": "^8.1.0",
    "simple-git": "^3.27.0",
    "workspace-tools": "^0.36.4"
  },
  "devDependencies": {
    "@gabortorma/antfu-eslint-config": "^2.0.1",
    "@octokit/types": "^13.5.0",
    "@types/node": "^22.5.5",
    "dotenv-cli": "^7.4.2",
    "jiti": "^1.21.6",
    "typescript": "^5.6.2",
    "unbuild": "^2.0.0",
    "vitest": "^2.1.1"
  }
}
